<div class='section'>
  <div class='container'>
    <div class='columns is-centered form-width'>
      

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class='form-width logT'>
          <span class='is-block has-text-centered'>
            <i class="fa fa-twitter has-text-info fa-2x mb-3" aria-hidden="true"></i>
          </span>
          <h2 class='has-text-weight-bold has-text-black has-text-centered is-size-4 mb-4' >Registration</h2>
          <%@user.errors.full_messages.each do |error| %>
            <li><%= error%></li>
          <%end%>

            <div class='form-input'>
              <label for='username' class='has-text-grey	ml-3 mt-3 is-size-6'>Username</label><br>
              <input type="text" id="username" name="user[username]" required >
            </div>
            <div class='form-input'>
              <label for='name' class='has-text-grey	ml-3 mt-3 is-size-6'>Name</label><br>
              <input type="text" id="name" name="user[name]" required >
            </div>    
            <div class='form-input'>
              <label for='email' class='has-text-grey	ml-3 mt-3 is-size-6'>Email address</label><br>
              <input type="email" id="email" name="user[email]" required >
            </div>  
            
            <div class='form-input'>
              <label for='password' class='has-text-grey	ml-3 mt-3 is-size-6'>Password</label><br>
              <input type="password" id="password" name="user[password]"  required >
            </div> 
            <div class='form-input'>
              <label for='password_c' class='has-text-grey	ml-3 mt-3 is-size-6'>Password Confirmation</label><br>
              <input type="password" id="password_c" name="user[password_confirmation]"  required >
            </div>   
            
            
          
            <div class="field">
              <div class="control">
          
                  <%= f.button :submit, "Sign up", class:"button is-info is-medium is-fullwidth is-rounded mt-3" %>
              </div>  
            </div>
            <%= render "devise/shared/links" %>    
        </div>  
      <% end %>

      
    </div>
  </div>
</div>