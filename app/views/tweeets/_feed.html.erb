<div class="column is-half">
    <% if user_signed_in? %>
        <article class="media box">
            
            <div class="media-content">
                <%= render 'tweeets/form'%>
            </div>
        </article>
    <% end %>

<% @tweeets.each do |tweeet| %>
    <div class='box'>
        <article class='media'>
            <div class='media-left'>
                <figure class='image is-64x64'>
                    <img src="https://bulma.io/images/placeholders/64x64.png">
                </figure>
            </div>
            <div class='media-content'>
                <div class='content'>
                    <div class='rows'>
                        <strong><%= tweeet.user.name %></strong><br>
                        <small class='has-text-grey-light'><%= tweeet.user.username %></small><br>
                        <small class='has-text-grey-light'><%= tweeet.created_at  %></small><br>
                    </div>    
                    <p><%= tweeet.tweeet %></p>
                </div>
                <% if user_signed_in? %>
                    <nav class='level'>
                        <div class="level-left is-mobile">
                            <%= link_to tweeet, class: "level-item" do %>
                                <span class="icon"><i class="fa fa-link has-text-grey" aria-hidden="true"></i></span>
                            <% end %>
                            <%= link_to edit_tweeet_path(tweeet), class: "level-item" do %>
                                <span class="icon"><i class="fa fa-pencil has-text-grey" aria-hidden="true"></i></span>
                            <% end %>
                            <%= link_to tweeet, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet?" } do %>
                                <span class="icon"><i class="fa fa-trash-o has-text-grey" aria-hidden="true"></i></span>
                            <% end %>
                        </div>
                    </nav>
                <% end %>
            </div>
        </article>
    </div>
      
    
<% end %>
</div>